<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Route to your Node entry file -->
      <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
      <!-- Remove WebDAV so it doesn't swallow verbs -->
      <remove name="WebDAV" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^app.js/debug[\/]?" />
        </rule>
        <!-- Serve static files from /public if present -->
        <rule name="StaticContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>
        <!-- Everything else to Node -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="app.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Show Node errors and write iisnode logs while debugging -->
    <httpErrors existingResponse="PassThrough" />
    <iisnode loggingEnabled="true" devErrorsEnabled="true" />

    <!-- Remove WebDAV module -->
    <modules>
      <remove name="WebDAVModule" />
    </modules>
  </system.webServer>
</configuration>
